<%- include('../partials/head') %>
  </head>
  <body>
    <%- include('../partials/nav') %>
    <main class="container mx-auto mt-8 p-4">
      <div class="bg-white shadow-md rounded-lg p-6 text-center">
        <% let hasEmptyFields = false; %>
        <% if(registeredHomes && registeredHomes.length > 0) {
          const lastHome = registeredHomes[registeredHomes.length - 1];
          if(lastHome.houseName === "" || lastHome.location === "" || lastHome.price === "" || lastHome.ratings === "" || lastHome.photoURL === "") {
            hasEmptyFields = true;
          }
        } %>

        <% if(hasEmptyFields) { %>
          <h1 class="text-3xl font-bold text-yellow-500 mb-4">Registration Incomplete</h1>
          <p class="text-lg text-gray-600">Please fill all the required fields to register your home.</p>
        <% } else { %>
          <h1 class="text-3xl font-bold text-red-500 mb-4">Home Registered Successfully</h1>
          <p class="text-lg text-gray-600">Your home has been added to our listings.</p>
        <% } %>
        
        <a href="/" class="inline-block mt-6 bg-red-500 text-white py-2 px-4 rounded hover:bg-red-400 transition duration-300">Return to Home</a>
      </div>
    </main>
  </body>
</html>